{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "files": [
    "public-typescript/main.ts",
    "public-typescript/dashboard.ts",
    "public-typescript/admin.employees.ts",
    "public-typescript/admin.users.ts",
    "public-typescript/attendance.ts",
    "public-typescript/attendance.absences.ts",
    "public-typescript/attendance.callOuts.ts",
    "public-typescript/attendance.employees.ts",
    "public-typescript/attendance.returnsToWork.ts",
    "public-typescript/reports.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
